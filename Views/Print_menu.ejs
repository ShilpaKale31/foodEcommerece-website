        <h1>MENU DETAILS</h1>
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Item Name</th>
            <th>Category</th>
            <th class="text-center">Sub_category</th>
            <th class="text-center">Description</th>
            <th>Price</th>
            <th class="text-center">Status</th>
            
            
        </tr>
    <% 
        for(i=0;i<list.length;i++)
        {
    %>
